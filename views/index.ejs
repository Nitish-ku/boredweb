<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>boredweb</title>
    <link rel="stylesheet" href="/styles/style.css" />
  </head>
  <body>
    <div class="container">
      <h1>Getting bored? Lemme find something for you to do ðŸ’ƒ</h1>
      <form action="/" class="form" method="post">
        <select id="type" name="type">
          <option value="">Random Type</option>
          <option value="education">Education</option>
          <option value="charity">Charity</option>
          <option value="recreational">Recreational</option>
          <option value="relaxation">Relaxation</option>
          <option value="busywork">Busywork</option>
          <option value="social">Social</option>
          <option value="diy">DIY</option>
          <option value="music">Music</option>
        </select>

        <select id="participants" name="participants">
          <option value="">Any number of people</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
        </select>

        <button type="submit" class="form-submit">Go</button>
      </form>
      <section id="cards" class="cards">
        <% if(typeof data !== "undefined") { %>
        <article class="card_item">
          <h2 class="card_activity">
            <p><%= data.activity %></p>
          </h2>
          <div class="card_info">
            <span class="card_type">
              <p><%= data.type %></p>
            </span>
            <span class="card_participants">
              <p>participants: <%= data.participants %></p>
            </span>
          </div>
        </article>
        <%}else if (typeof error !== "undefined"){%>

        <div class="tag_error">
          <p><%= error %></p>
        </div>
        <% }else{ %>
        <h2>Tell us what you are looking for</h2>

        <% } %>
      </section>
    </div>
  </body>
</html>
